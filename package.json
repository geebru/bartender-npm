{
  "name": "bartender-npm",
  "version": "1.0.0",
  "description": "A CLI-based, front-end build tool.",
  "keywords": [
    "postcss",
    "css"
  ],
  "author": "Greg Bruening",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "babel-cli": "^6.26.0",
    "chokidar-cli": "^1.2.0",
    "cssnano": "^4.0.1",
    "eslint": "^5.1.0",
    "imagemin-cli": "^3.0.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "postcss-cli": "^5.0.1",
    "postcss-critical-css": "^3.0.1",
    "postcss-css-variables": "^0.9.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-nesting": "^6.0.0",
    "stylelint": "^9.3.0"
  },
  "scripts": {
    "scripts:eslint": "eslint src/js/**/*",
    "scripts:babel": "babel src/js -d dist/js --ignore vendor/ --copy-files",
    "scripts": "run-s scripts:*",
    "styles:postcss": "postcss src/css/*.css --map --no-map -d dist/css",
    "styles:stylelint": "stylelint 'dist/css/*.css'",
    "styles": "run-s styles:*",
    "assets:images": "imagemin src/assets/images/**/* -o=dist/assets/images",
    "assets:svgs": "imagemin src/assets/svgs/**/* -p=svgo -o=dist/assets/svgs",
    "assets": "run-p assets:*",
    "watch:scripts": "chokidar 'src/js/**/*.js' -c 'npm run scripts'",
    "watch:styles": "chokidar 'src/css/**/*.css' -c 'npm run styles'",
    "watch:assets": "chokidar 'src/assets/**/*' -c 'npm run assets'",
    "watch": "run-p watch:*",
    "build": "run-s scripts:* styles:* assets:*"
  }
}
