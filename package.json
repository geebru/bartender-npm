{
  "name": "bartender-npm",
  "version": "0.1.1",
  "description": "npm run task for front-end development.",
  "keywords": [
    "npm",
    "css",
    "scss",
    "js",
    "images",
    "build",
    "run"
  ],
  "author": "Greg Bruening",
  "license": "MIT",
  "main": "index.js",
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "babel-cli": "^6.26.0",
    "colorguard": "^1.2.1",
    "concat-cli": "^4.0.0",
    "cssnano": "^3.10.0",
    "doiuse": "^4.0.0",
    "eslint": "^4.18.2",
    "imagemin-cli": "^3.0.0",
    "immutable-css-cli": "^1.1.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-cli-simple": "^1.0.4",
    "postcss-critical-css": "^3.0.1",
    "postcss-custom-properties": "^7.0.0",
    "postcss-easing-gradients": "^1.2.3",
    "postcss-flexbugs-fixes": "^3.3.0",
    "stylelint": "^9.1.1",
    "svgo": "^1.0.5",
    "uglify-js": "^3.3.12"
  },
  "config": {
    "srcDirectoryStyles": "src/scss",
    "srcDirectoryImages": "src/assets/img",
    "srcDirectorySVGs": "src/assets/svg",
    "srcDirectoryScripts": "src/js",
    "distDirectoryStyles": "dist/css",
    "distDirectoryImages": "dist/assets/img",
    "distDirectorySVGs": "dist/assets/svg",
    "distDirectoryScripts": "dist/scripts"
  },
  "scripts": {
    "style:stylelint": "stylelint '$npm_package_config_srcDirectoryStyles/**/*.scss'",
    "style:immutable": "immutable-css $npm_package_config_srcDirectoryStyles/**/*.scss",
    "style:colorguard": "colorguard $npm_package_config_srcDirectoryStyles/**/*.scss",
    "styles:sass": "node-sass $npm_package_config_srcDirectoryStyles -o $npm_package_config_distDirectoryStyles",
    "styles:postcss": "postcss -c postcss-config.json $npm_package_config_distDirectoryStyles",
    "scripts:eslint": "eslint $npm_package_config_srcDirectoryScripts/**/*.js",
    "scripts:es6-transpile": "babel $npm_package_config_srcDirectoryScripts/**/*.js",
    "scripts:concat": "concat-cli -f $npm_package_config_srcDirectoryScripts/**/*.js -o $npm_package_config_distDirectoryScripts/scripts.js",
    "scripts:uglify": "uglifyjs $npm_package_config_distDirectoryScripts/scripts.js",
    "assets:minify": "imagemin $npm_package_config_srcDirectoryImages/**/* -o=$npm_package_config_distDirectoryImages",
    "assets:svgo": "svgo -f $npm_package_config_srcDirectorySVGs/**/*.svg -o $npm_package_config_distDirectorySVGs",
    "build:styles": "npm-run-all styles:*",
    "build:scripts": "npm-run-all scripts:*",
    "build:assets": "npm-run-all assets:*",
    "watch:styles": "onchange $npm_package_config_srcDirectory/scss/**/* -- npm run build:styles",
    "watch:scripts": "onchange $npm_package_config_srcDirectoryScripts/**/* -- npm run build:scripts",
    "watch:images": "onchange $npm_package_config_srcDirectoryAssets/images/**/* -- npm run build:images",
    "watch": "npm-run-all -c -p watch:*",
    "dev": "npm-run-all build:*",
    "test:stylelint": "stylelint '$npm_package_config_distDirectoryStyles/**/*.css",
    "test:immutable": "immutable-css $npm_package_config_distDirectoryStyles/**/*.css",
    "test:colorguard": "colorguard $npm_package_config_distDirectoryStyles/**/*.css",
    "test:eslint": "eslint $npm_package_config_distDirectoryScripts/**/*.js",
    "test": "npm-run-all test:*",
    "preprod": "npm run dev && npm run test",
    "prod:cssnano": "postcss -c cssnano-config.json $npm_package_config_distDirectoryStyles/**/*.css",
    "prod": "npm-run-all prod:*"
  }
}
