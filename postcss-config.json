{
  "use":
    ["autoprefixer",
     "doiuse",
     "postcss-critical-css",
     "postcss-custom-properties",
     "postcss-easing-gradients",
     "postcss-flexbugs-fixes"],
  "output": "styles.css",
  "autoprefixer": {
    "browsers": "IE 11, iOS 7, > 5%"
  },
  "doiuse": {
    "browsers": "IE 11, iOS 7, > 5%",
    "ignore": ["flexbox"],
    "ignoreFiles": [
      "**/normalize.scss",
      "**/reset.scss"
    ]
  },
  "postcss-critical-css": {
    "outputDest": "dist/css/critical.css",
    "minify": false
  }
}
